<%@ page contentType="text/html;charset=UTF-8" language="java" %>
<sec:authentication var="auth" property="principal"/>
<c:url value="/logout" var="logoutUrl"/>

<form action="${logoutUrl}" method="post" id="logoutForm">
    <input type="hidden" name="${_csrf.parameterName}" value="${_csrf.token}"/>
</form>
<html>
<head>
    <title>Upload Transaction Information</title>
</head>
<body>
<!-- Begin Page Content -->
<div class="container-fluid">
    <!--Intput table card-->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Upload Transaction Information</h6>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-lg-10">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-12">
                                    <form id="bankDeposit" method="POST" action="<c:url value='/save'/>"
                                          enctype="multipart/form-data">

                                        <div class="form-group row">
                                            <label class="align-right required col-lg-2"
                                                   for="uploadFile">Upload</label>

                                            <div class="col-lg-5">
                                                <input type="file" name="uploadFile" id="uploadFile"
                                                       class="form-control-file" required>
                                            </div>
                                        </div>


                                        <div class="form-group row">
                                            <label class="align-right  col-lg-2"
                                                   for="remark">Remark</label>

                                            <div class="col-lg-5">
                                                <textarea name="remark" id="remark" class="form-control editable"
                                                          autocomplete="off"></textarea>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <input type="reset" id="btnReset" class="btn btn-primary"
                                                   value="Reset">

                                            <%--<security:authorize access="hasRole('${SCREEN_ID}-ADD')">--%>
                                            <input type="submit" id="btnSave" value="Save"
                                                   class="btn btn-primary  editable">
                                            <%--</security:authorize>--%>
                                        </div>
                                    </form>
                                </div>
                                <!-- /.col-lg-6 (nested) -->
                            </div>
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->

                <div class="col-lg-2" id="db_excel_format"></div>
            </div>
        </div>
    </div>

<%--    Bank-wise total cards--%>
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Total Cards Issued by Individual Banks</h6>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <table class="table table-bordered" id="cardInfo">
                        <thead>
                        <tr>
                            <th rowspan="2">Bank</th>
                            <th rowspan="2">Types of Card</th>
                            <th class="text-center" colspan="2">No. of Cards Issued</th>
                            <th class="text-center" colspan="2">Total Amount</th>
                        </tr>
                        <tr>
                            <th>USD</th>
                            <th>INR</th>
                            <th>USD</th>
                            <th>INR</th>
                        </tr>
                        </thead>

                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>


    <%--    All Cards Info List--%>
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">All Cards Information</h6>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <table class="table table-bordered" id="allCardInfoTable">
                        <thead>
                        <tr>
                            <th>#</th>
                            <th>CID</th>
                            <th>NAME</th>
                            <th>CARD TYPE</th>
                            <th>SANCTION AMOUNT</th>
                            <th>CURRENCY</th>
                            <th>BANK</th>
                        </tr>
                        </thead>

                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="<c:url value='/resources/js/db/home.js'/>"></script>
</body>
</html>
